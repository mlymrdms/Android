<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capstone.mobile.coachwithoutsearch.BmiActivity"
    android:background="@color/white"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="501dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginTop="25dp"
                android:text="Weight"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="37dp"
                android:text="Height"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="93dp" />

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/et_height"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignStart="@+id/et_weight"
                android:ems="10"
                android:inputType="numberDecimal" />

            <!-- <Spinner
                android:id="@+id/sp_HUnit"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_height"
                android:layout_toEndOf="@+id/et_height"
                android:entries="@array/HUnit"
                tools:layout_editor_absoluteX="278dp"
                tools:layout_editor_absoluteY="25dp" />

             <Spinner
                android:id="@+id/sp_WUnit"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_weight"
                android:layout_toEndOf="@+id/et_weight"
                android:entries="@array/WUnit"
                tools:layout_editor_absoluteX="278dp"
                tools:layout_editor_absoluteY="25dp" /> -->

            <Button
                android:id="@+id/bt_calculate"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="19dp"
                android:background="@color/red"
                android:text="Calculate BMI"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_below="@+id/et_height"
                android:layout_toRightOf="@+id/tv_calculation"
                android:layout_toEndOf="@+id/tv_calculation"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />
               <!-- android:layout_alignEnd="@+id/sp_HUnit" /> -->

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bt_calculate"
                android:layout_marginTop="22dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/avg_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="Result:"
                android:textAlignment="viewStart"
                android:textColor="@color/lightgray"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="Your BMI Calculation is:"
                android:textColor="@color/lightgray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avg_progress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_calculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
