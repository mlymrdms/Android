<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">


    <TextView
        android:id="@+id/txtMembershipType"
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Membership Type"
        android:textAlignment="center"
        android:textColor="@color/iconColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="59dp"
        android:layout_height="27dp"
        android:text="Status:"
        android:textColor="@color/iconColor"
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txtMembershipType" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="Enrollees:"
        android:textColor="@color/iconColor"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txtMembershipType"
        app:layout_constraintRight_toLeftOf="@+id/textView30"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="12dp"
        android:text="STATUS"
        android:textColor="@color/iconColor"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/textView26"
        app:layout_constraintTop_toBottomOf="@+id/txtMembershipType" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="58dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:text="ENROLLEES"
        android:textColor="@color/iconColor"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txtMembershipType"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>