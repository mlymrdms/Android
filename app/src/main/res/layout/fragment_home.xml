    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="170dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCustomers"
        app:layout_constraintVertical_bias="0.066"
        android:id="@+id/relativeLayout2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/boxCustomers"
            android:layout_width="190dp"
            android:layout_height="81dp"
            android:background="@drawable/stats_customers_served"
            android:text="CUSTOMERS SERVED TODAY"
            android:textAlignment="center"
            android:textColor="@color/iconColor"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/boxWalkin"
            android:layout_width="190dp"
            android:layout_height="81dp"
            android:background="@drawable/stats_walk_in_served"
            android:text="WALK-IN SERVED"
            android:textAlignment="center"
            android:textColor="@color/iconColor"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/boxAssigned"
            android:layout_width="190dp"
            android:layout_height="81dp"
            android:background="@drawable/stats_assigned_classes"
            android:text="ASSIGNED CLASSES"
            android:textAlignment="center"
            android:textColor="@color/rectAssignedColor"
            android:textSize="12sp"
            android:layout_below="@+id/boxCustomers"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/boxOverall"
            android:layout_width="190dp"
            android:layout_height="81dp"
            android:background="@drawable/stats_overall"
            android:text="OVERALL NUMBER OF STUDENTS"
            android:textAlignment="center"
            android:textColor="@color/iconColor"
            android:textSize="12sp"
            android:layout_below="@+id/boxWalkin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/statsCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/boxAssigned"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="86dp"
            android:layout_marginRight="86dp"
            android:layout_toLeftOf="@+id/boxWalkin"
            android:layout_toStartOf="@+id/boxWalkin"
            android:text="50"
            android:textAlignment="center"
            android:textColor="@color/iconColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statsOverall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/boxOverall"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="26dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:text="32"
            android:textColor="@color/iconColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statsWalkIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/statsOverall"
            android:layout_alignStart="@+id/statsOverall"
            android:layout_alignTop="@+id/statsCustomer"
            android:text="30"
            android:textColor="@color/iconColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statsAssigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/statsOverall"
            android:layout_alignLeft="@+id/statsCustomer"
            android:layout_alignStart="@+id/statsCustomer"
            android:text="6"
            android:textColor="@color/backgroundColor"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>

